{
	"name": "zeyr-turborepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"postinstall": "husky install .github/husky && pnpm bot prisma:generate",
		"bot": "pnpm --filter zeyr",
		"api": "pnpm --filter api",
		"update:i": "pnpm --recursive update -i",
		"format": "pnpm dlx @biomejs/biome format . --write",
		"check": "pnpm dlx @biomejs/biome check --apply-unsafe ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.3.3",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@sapphire/ts-config": "^4.0.0",
		"@types/node": "^18.16.2",
		"@types/ws": "^8.5.4",
		"colorette": "^2.0.20",
		"husky": "^8.0.3",
		"tsc-watch": "^6.0.0",
		"turbo": "latest",
		"typescript": "^5.0.4"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"packageManager": "pnpm@7.28.0"
}
